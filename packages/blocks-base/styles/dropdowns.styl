// dropdown specific variables
$dropdown-icon-color = $primary-00;

$dropdown-default-text-color = $dark-02;
$dropdown-focus-text-color = $dark-00;
$dropdown-filled-text-color = $dark-00;

$dropdown-default-background-color = $secondary-00;
$dropdown-hover-background-color = $secondary-00;
$dropdown-focus-background-color = $secondary-00;
$dropdown-active-background-color = $secondary-00;

$dropdown-default-border = 1px solid $light-01;
$dropdown-active-border = 1px solid $light-02;
$dropdown-hover-border = 1px solid $light-02;
$dropdown-focus-border = 1px solid $focus;
$dropdown-error-border = 1px solid $danger-00;

$dropdown-item-default-text-color = $dark-00;
$dropdown-item-hover-text-color = $dark-00;
$dropdown-item-focus-text-color = $dark-00;

$dropdown-item-default-background-color = transparent;
$dropdown-item-hover-background-color = $secondary-01;
$dropdown-item-focus-background-color = $secondary-01;

$dropdown-icon-spin-duration = 200ms;

// dropdown styles
.blx-dropdown-wrapper {
  position: relative;
  display: block;
}

.blx-dropdown {
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 150px;
  max-width: 300px;

  label {
    margin-bottom: 6px;
  }
}

.blx-dropdown-trigger {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  padding: 0 16px;
  border-radius: $base-border-radius;
  border: $dropdown-default-border;
  background-color: $dropdown-default-background-color;
  margin: 0;
  cursor: pointer;
  blxTruncateText();
  blxUIPlaceholder();

  .blx-dropdown-arrow {
    width: 20px;
    height: 20px;
    flex: 0 0 auto;
    border: none;
    background-color: transparent;
    background-image: url('../svgs/icon-down.svg');
    transform: rotate(0deg);
    transition: transform $dropdown-icon-spin-duration;
  }

  .blx-dropdown-text,
  .blx-dropdown-placeholder {
    &:not(:first-child) {
      margin-left: 12px;
    }

    &:not(:last-child) {
      margin-right: 12px;
    }
  }

  .blx-dropdown-text {
    color: $dropdown-filled-text-color;
  }

  .blx-dropdown-placeholder {
    color: $dropdown-default-text-color;
  }
  
  &.blx-active {
    border-radius: $base-border-radius $base-border-radius 0 0;
    
    .blx-dropdown-arrow {
      transform: rotate(180deg);
      transition: transform $dropdown-icon-spin-duration;
    }
  }
  
  &.blx-invalid {
    border: $dropdown-error-border;
  }

  &:focus, &.blx-focus {
    margin: 0;
    outline: none;
    background-color: $dropdown-focus-background-color;
    border: $dropdown-focus-border;
    color: $dropdown-focus-text-color;
  }

  &:hover, &.blx-hover {
    background-color: $dropdown-hover-background-color;
    border: $dropdown-hover-border;
  }
}

.blx-dropdown-menu {
  display: block;
  position: absolute;
  top: 100%;
  width: 100%;
  border-radius: 0 0 $base-border-radius $base-border-radius;
  z-index: 1;
  list-style-type: none;
  overflow: hidden;

  background-color: $dropdown-default-background-color;
  border: $dropdown-default-border $dropdown-default-border 0 $dropdown-default-border;
  box-shadow: $default-box-shadow;
}

.blx-dropdown-list.blx-scrollable {
  max-height: 140px;
  overflow-y: auto;
}

.blx-dropdown-item {
  position: relative;
  background: $dropdown-item-default-background-color;
  overflow: hidden;

  a, button {
    display: block;
    width: 100%;
    height: 40px;
    padding: 8px 16px;
    cursor: pointer;
    background: transparent;
    border: none;
    text-decoration: none;
    font-size: 14px;
    font-weight: $normal-weight;
    line-height: 20px;
    text-align: left;
    blxTruncateText();
    cursor: pointer;
    color: $dropdown-item-default-text-color;

    &:focus, &.blx-focus, &:active, &.blx-active {
      outline: none;
      color: $dropdown-item-focus-text-color;
      background-color: $dropdown-item-focus-background-color;
    }
  }
  
  &.blx-selected {
    a, button {
      padding-left: 36px;
      &::before {
        content: "";
        position: absolute;
        top: 16px;
        left: 0;
        margin-left: 16px;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: $primary-00;
      }
    }
  }

  &.blx-selected {
    a, button {
      padding-left: 36px;
      &::before {
        content: "";
        position: absolute;
        top: 16px;
        left: 0;
        margin-left: 16px;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: $primary-00;
      }
    }
  }

  &:hover, &.blx-hover {
    background-color: $dropdown-item-hover-background-color;
    a, button {
      text-decoration: none;
      color: $dropdown-item-hover-text-color;
    }
  }
}

.blx-dropdown-item:last-child {
  border-radius: 0 0 0 $base-border-radius;
}
